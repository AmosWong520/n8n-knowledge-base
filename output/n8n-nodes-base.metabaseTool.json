        {
          "displayName": "Timeout",
          "name": "timeout",
          "type": "number",
          "typeOptions": {
            "minValue": 1
          },
          "default": 10000,
          "description": "Time in ms to wait for the server to send response headers (and start the response body) before aborting the request"
        }
      ],
      "ai_hint": "此参数为 fixedCollection，包含嵌套字段，不要扁平化。"
    }
  },
  "configuration_logic": {
    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "resource",
      "operation",
      "questionId",
      "format",
      "operation",
      "metricId",
      "operation",
      "databaseId",
      "engine",
      "host",
      "name",
      "port",
      "user",
      "password",
      "dbName",
      "filePath",
      "fullSync",
      "simple",
      "operation",
      "alertId",
      "requestOptions"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF resource == 'questions' THEN SHOW parameter 'operation'",
      "IF resource == 'questions' AND operation IN [\"get\", \"resultData\"] THEN SHOW parameter 'questionId'",
      "IF resource == 'questions' AND operation == 'resultData' THEN SHOW parameter 'format'",
      "IF resource == 'metrics' THEN SHOW parameter 'operation'",
      "IF resource == 'metrics' AND operation == 'get' THEN SHOW parameter 'metricId'",
      "IF resource == 'databases' THEN SHOW parameter 'operation'",
      "IF resource == 'databases' AND operation == 'getFields' THEN SHOW parameter 'databaseId'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' THEN SHOW parameter 'engine'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"postgres\", \"redshift\", \"mysql\", \"mongo\"] THEN SHOW parameter 'host'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' THEN SHOW parameter 'name'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"postgres\", \"redshift\", \"mysql\", \"mongo\"] THEN SHOW parameter 'port'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"postgres\", \"redshift\", \"mysql\", \"mongo\"] THEN SHOW parameter 'user'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"postgres\", \"redshift\", \"mysql\", \"mongo\"] THEN SHOW parameter 'password'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"postgres\", \"redshift\", \"mysql\", \"mongo\"] THEN SHOW parameter 'dbName'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' AND engine IN [\"h2\", \"sqlite\"] THEN SHOW parameter 'filePath'",
      "IF resource == 'databases' AND operation == 'addNewDatasource' THEN SHOW parameter 'fullSync'",
      "IF resource == 'databases' AND operation == 'getAll' THEN SHOW parameter 'simple'",
      "IF resource == 'alerts' THEN SHOW parameter 'operation'",
      "IF resource == 'alerts' AND operation == 'get' THEN SHOW parameter 'alertId'"
    ]
  }
}