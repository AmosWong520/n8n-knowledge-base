        "output": {
          "postReceive": [
            {
              "type": "setKeyValue",
              "enabled": "={{$value}}",
              "properties": {
                "id": "={{$responseItem.id}}",
                "name": "={{$responseItem.name}}",
                "description": "={{$responseItem.description}}",
                "engine": "={{$responseItem.engine}}",
                "creator_id": "={{$responseItem.creator_id}}",
                "timezone": "={{$responseItem.timezone}}",
                "created_at": "={{$responseItem.created_at}}",
