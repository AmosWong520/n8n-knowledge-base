{
  "node_id": "n8n-nodes-base.ftp",
  "name": "n8n-nodes-base.ftp",
  "version": 1,
  "semantic_context": "Transfer files via FTP or SFTP",
  "parameters": {
    "protocol": {
      "displayName": "Protocol",
      "name": "protocol",
      "type": "options",
      "options": [
        {
          "name": "FTP",
          "value": "ftp"
        },
        {
          "name": "SFTP",
          "value": "sftp"
        }
      ],
      "default": "ftp",
      "description": "File transfer protocol",
      "ai_hint": "根据 REST 规范选择方法: 查询用 GET，创建用 POST，更新用 PUT/PATCH。"
    },
    "operation": {
      "displayName": "Operation",
      "name": "operation",
      "type": "options",
      "options": [
        {
          "name": "Delete",
          "value": "delete",
          "description": "Delete a file/folder",
          "action": "Delete a file or folder"
        },
        {
          "name": "Download",
          "value": "download",
          "description": "Download a file",
          "action": "Download a file"
        },
        {
          "name": "List",
          "value": "list",
          "description": "List folder content",
          "action": "List folder content"
        },
        {
          "name": "Rename",
          "value": "rename",
          "description": "Rename/move oldPath to newPath",
          "action": "Rename / move a file or folder"
        },
        {
          "name": "Upload",
          "value": "upload",
          "description": "Upload a file",
          "action": "Upload a file"
        }
      ],
      "default": "download",
      "noDataExpression": true,
      "ai_hint": "根据 REST 规范选择方法: 查询用 GET，创建用 POST，更新用 PUT/PATCH。"
    },
    "path": {
      "displayName": "Path",
      "displayOptions": {
        "show": {
          "operation": [
            "list"
          ]
        }
      },
      "name": "path",
      "type": "string",
      "default": "/",
      "placeholder": "e.g. /public/folder",
      "description": "Path of directory to list contents of",
      "required": true,
      "ai_hint": "Path of directory to list contents of"
    },
    "options": {
      "displayName": "Options",
      "name": "options",
      "type": "collection",
      "placeholder": "Add Field",
      "default": {},
      "displayOptions": {
        "show": {
          "operation": [
            "rename"
          ]
        }
      },
      "options": [
        {
          "displayName": "Create Directories",
          "name": "createDirectories",
          "type": "boolean",
          "default": false,
          "description": "Whether to recursively create destination directory when renaming an existing file or folder"
        }
      ],
      "ai_hint": "此参数为 fixedCollection，包含嵌套字段，不要扁平化。"
    },
    "binaryPropertyName": {
      "displayName": "Input Binary Field",
      "displayOptions": {
        "show": {
          "operation": [
            "upload"
          ],
          "binaryData": [
            true
          ]
        }
      },
      "name": "binaryPropertyName",
      "type": "string",
      "default": "data",
      "hint": "The name of the input binary field containing the file to be written",
      "required": true
    },
    "oldPath": {
      "displayName": "Old Path",
      "displayOptions": {
        "show": {
          "operation": [
            "rename"
          ]
        }
      },
      "name": "oldPath",
      "type": "string",
      "default": "",
      "placeholder": "e.g. /public/documents/old-file.txt",
      "required": true
    },
    "newPath": {
      "displayName": "New Path",
      "displayOptions": {
        "show": {
          "operation": [
            "rename"
          ]
        }
      },
      "name": "newPath",
      "type": "string",
      "default": "",
      "placeholder": "e.g. /public/documents/new-file.txt",
      "required": true
    },
    "binaryData": {
      "displayName": "Binary File",
      "displayOptions": {
        "show": {
          "operation": [
            "upload"
          ]
        }
      },
      "name": "binaryData",
      "type": "boolean",
      "default": true,
      "description": "The text content of the file to upload",
      "ai_hint": "布尔值：true 或 false。"
    },
    "fileContent": {
      "displayName": "File Content",
      "displayOptions": {
        "show": {
          "operation": [
            "upload"
          ],
          "binaryData": [
            false
          ]
        }
      },
      "name": "fileContent",
      "type": "string",
      "default": "",
      "description": "The text content of the file to upload",
      "ai_hint": "The text content of the file to upload"
    },
    "recursive": {
      "displayName": "Recursive",
      "displayOptions": {
        "show": {
          "operation": [
            "list"
          ]
        }
      },
      "name": "recursive",
      "type": "boolean",
      "default": false,
      "description": "Whether to return object representing all directories / objects recursively found within SFTP server",
      "required": true,
      "ai_hint": "布尔值：true 或 false。"
    }
  },
  "configuration_logic": {
    "required_sequence": [
      "protocol",
      "operation",
      "path",
      "options",
      "path",
      "binaryPropertyName",
      "options",
      "oldPath",
      "newPath",
      "options",
      "path",
      "binaryData",
      "binaryPropertyName",
      "fileContent",
      "path",
      "recursive"
    ],
    "conditional_rules": [
      "IF operation == 'delete' THEN SHOW parameter 'path'",
      "IF operation == 'delete' THEN SHOW parameter 'options'",
      "IF folder == True THEN SHOW parameter 'recursive'",
      "IF operation == 'download' THEN SHOW parameter 'path'",
      "IF operation == 'download' THEN SHOW parameter 'binaryPropertyName'",
      "IF operation == 'download' THEN SHOW parameter 'options'",
      "IF enableConcurrentReads == True THEN SHOW parameter 'maxConcurrentReads'",
      "IF enableConcurrentReads == True THEN SHOW parameter 'chunkSize'",
      "IF operation == 'rename' THEN SHOW parameter 'oldPath'",
      "IF operation == 'rename' THEN SHOW parameter 'newPath'",
      "IF operation == 'rename' THEN SHOW parameter 'options'",
      "IF operation == 'upload' THEN SHOW parameter 'path'",
      "IF operation == 'upload' THEN SHOW parameter 'binaryData'",
      "IF operation == 'upload' AND binaryData == True THEN SHOW parameter 'binaryPropertyName'",
      "IF operation == 'upload' AND binaryData == False THEN SHOW parameter 'fileContent'",
      "IF operation == 'list' THEN SHOW parameter 'path'",
      "IF operation == 'list' THEN SHOW parameter 'recursive'"
    ]
  }
}