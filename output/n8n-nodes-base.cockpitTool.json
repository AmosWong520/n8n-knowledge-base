  "configuration_logic": {
    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "resource",
      "operation",
      "collection",
      "returnAll",
      "limit",
      "options",
      "id",
      "jsonDataFields",
      "dataFieldsJson",
      "dataFieldsUi",
      "operation",
      "form",
      "jsonDataFields",
      "dataFieldsJson",
      "dataFieldsUi",
      "operation",
      "singleton"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF resource == 'collection' THEN SHOW parameter 'operation'",
      "IF resource == 'collection' THEN SHOW parameter 'collection'",
      "IF operation == 'getAll' AND resource == 'collection' THEN SHOW parameter 'returnAll'",
      "IF operation == 'getAll' AND resource == 'collection' AND returnAll == False THEN SHOW parameter 'limit'",
      "IF resource == 'collection' AND operation == 'getAll' THEN SHOW parameter 'options'",
      "IF resource == 'collection' AND operation == 'update' THEN SHOW parameter 'id'",
      "IF resource == 'collection' AND operation IN [\"create\", \"update\"] THEN SHOW parameter 'jsonDataFields'",
      "IF jsonDataFields == True AND resource == 'collection' AND operation IN [\"create\", \"update\"] THEN SHOW parameter 'dataFieldsJson'",
      "IF jsonDataFields == False AND resource == 'collection' AND operation IN [\"create\", \"update\"] THEN SHOW parameter 'dataFieldsUi'",
      "IF resource == 'form' THEN SHOW parameter 'operation'",
      "IF resource == 'form' THEN SHOW parameter 'form'",
      "IF resource == 'form' AND operation == 'submit' THEN SHOW parameter 'jsonDataFields'",
      "IF jsonDataFields == True AND resource == 'form' AND operation == 'submit' THEN SHOW parameter 'dataFieldsJson'",
      "IF jsonDataFields == False AND resource == 'form' AND operation == 'submit' THEN SHOW parameter 'dataFieldsUi'",
      "IF resource == 'singleton' THEN SHOW parameter 'operation'",
      "IF resource == 'singleton' THEN SHOW parameter 'singleton'"
    ]
  }
