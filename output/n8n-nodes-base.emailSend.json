{
  "node_id": "n8n-nodes-base.emailSend",
  "name": "n8n-nodes-base.emailSend",
  "version": 1,
  "semantic_context": "Sends an Email",
  "parameters": {
    "fromEmail": {
      "displayName": "From Email",
      "name": "fromEmail",
      "type": "string",
      "default": "",
      "required": true,
      "placeholder": "admin@example.com",
      "description": "Email address of the sender optional with name",
      "ai_hint": "Email address of the sender optional with name"
    },
    "toEmail": {
      "displayName": "To Email",
      "name": "toEmail",
      "type": "string",
      "default": "",
      "required": true,
      "placeholder": "info@example.com",
      "description": "Email address of the recipient",
      "ai_hint": "Email address of the recipient"
    },
    "ccEmail": {
      "displayName": "CC Email",
      "name": "ccEmail",
      "type": "string",
      "default": "",
      "placeholder": "cc@example.com",
      "description": "Email address of CC recipient",
      "ai_hint": "Email address of CC recipient"
    },
    "bccEmail": {
      "displayName": "BCC Email",
      "name": "bccEmail",
      "type": "string",
      "default": "",
      "placeholder": "bcc@example.com",
      "description": "Email address of BCC recipient",
      "ai_hint": "Email address of BCC recipient"
    },
    "subject": {
      "displayName": "Subject",
      "name": "subject",
      "type": "string",
      "default": "",
      "placeholder": "My subject line",
      "description": "Subject line of the email",
      "ai_hint": "Subject line of the email"
    },
    "text": {
      "displayName": "Text",
      "name": "text",
      "type": "string",
      "typeOptions": {
        "rows": 5
      },
      "default": "",
      "description": "Plain text message of email",
      "ai_hint": "Plain text message of email"
    },
    "html": {
      "displayName": "HTML",
      "name": "html",
      "type": "string",
      "typeOptions": {
        "rows": 5
      },
      "default": "",
      "description": "HTML text message of email",
      "ai_hint": "HTML text message of email"
    },
    "attachments": {
      "displayName": "Attachments",
      "name": "attachments",
      "type": "string",
      "default": "",
      "description": "Name of the binary properties that contain data to add to email as attachment. Multiple ones can be comma-separated.",
      "ai_hint": "Name of the binary properties that contain data to add to email as attachment. Multiple ones can be comma-separated."
    },
    "options": {
      "displayName": "Options",
      "name": "options",
      "type": "collection",
      "placeholder": "Add option",
      "default": {},
      "options": [
        {
          "displayName": "Ignore SSL Issues (Insecure)",
          "name": "allowUnauthorizedCerts",
          "type": "boolean",
          "default": false,
          "description": "Whether to connect even if SSL certificate validation is not possible"
        },
        {
          "displayName": "Reply To",
          "name": "replyTo",
          "type": "string",
          "default": "",
          "placeholder": "info@example.com",
          "description": "The email address to send the reply to"
        }
      ],
      "ai_hint": "此参数为 fixedCollection，包含嵌套字段，不要扁平化。"
    }
  },
  "configuration_logic": {
    "required_sequence": [
      "fromEmail",
      "toEmail",
      "ccEmail",
      "bccEmail",
      "subject",
      "text",
      "html",
      "attachments",
      "options"
    ],
    "conditional_rules": []
  }
}