      "postId",
      "contentFormat",
      "updateFields"
    ],
    "conditional_rules": [
      "IF source == 'contentApi' AND resource == 'post' THEN SHOW parameter 'operation'",
      "IF source == 'adminApi' AND resource == 'post' THEN SHOW parameter 'operation'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' THEN SHOW parameter 'title'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' THEN SHOW parameter 'contentFormat'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' AND contentFormat == 'html' THEN SHOW parameter 'content'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' AND contentFormat == 'mobileDoc' THEN SHOW parameter 'content'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' AND contentFormat == 'lexical' THEN SHOW parameter 'content'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'create' THEN SHOW parameter 'additionalFields'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'delete' THEN SHOW parameter 'postId'",
      "IF source IN [\"contentApi\", \"adminApi\"] AND resource == 'post' AND operation == 'get' THEN SHOW parameter 'by'",
      "IF source IN [\"contentApi\", \"adminApi\"] AND resource == 'post' AND operation == 'get' THEN SHOW parameter 'identifier'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'get' THEN SHOW parameter 'options'",
      "IF source == 'contentApi' AND resource == 'post' AND operation == 'get' THEN SHOW parameter 'options'",
      "IF source IN [\"contentApi\", \"adminApi\"] AND resource == 'post' AND operation == 'getAll' THEN SHOW parameter 'returnAll'",
      "IF source IN [\"adminApi\", \"contentApi\"] AND resource == 'post' AND operation == 'getAll' AND returnAll == False THEN SHOW parameter 'limit'",
      "IF source == 'contentApi' AND resource == 'post' AND operation == 'getAll' THEN SHOW parameter 'options'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'getAll' THEN SHOW parameter 'options'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'update' THEN SHOW parameter 'postId'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'update' THEN SHOW parameter 'contentFormat'",
      "IF source == 'adminApi' AND resource == 'post' AND operation == 'update' THEN SHOW parameter 'updateFields'",
      "IF /contentFormat == 'html' THEN SHOW parameter 'content'",
      "IF /contentFormat == 'mobileDoc' THEN SHOW parameter 'contentJson'",
      "IF /contentFormat == 'lexical' THEN SHOW parameter 'contentJson'"
    ]
  }
