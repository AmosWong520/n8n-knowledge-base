  "configuration_logic": {
    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "resource",
      "operation",
      "name",
      "type",
      "sport_type",
      "startDate",
      "elapsedTime",
      "additionalFields",
      "activityId",
      "updateFields",
      "activityId",
      "activityId",
      "returnAll",
      "limit",
      "keys",
      "returnAll",
      "limit"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF resource == 'activity' THEN SHOW parameter 'operation'",
      "IF resource == 'activity' AND operation == 'create' THEN SHOW parameter 'name'",
      "IF resource == 'activity' AND operation == 'create' AND @version == 1 THEN SHOW parameter 'type'",
      "IF resource == 'activity' AND operation == 'create' THEN SHOW parameter 'sport_type'",
      "IF @version == 1 THEN HIDE parameter 'sport_type'",
      "IF resource == 'activity' AND operation == 'create' THEN SHOW parameter 'startDate'",
      "IF resource == 'activity' AND operation == 'create' THEN SHOW parameter 'elapsedTime'",
      "IF resource == 'activity' AND operation == 'create' THEN SHOW parameter 'additionalFields'",
      "IF resource == 'activity' AND operation == 'update' THEN SHOW parameter 'activityId'",
      "IF resource == 'activity' AND operation == 'update' THEN SHOW parameter 'updateFields'",
      "IF @version == 1 THEN SHOW parameter 'type'",
      "IF resource == 'activity' AND operation == 'get' THEN SHOW parameter 'activityId'",
      "IF resource == 'activity' AND operation IN [\"getComments\", \"getLaps\", \"getKudos\", \"getZones\", \"getStreams\"] THEN SHOW parameter 'activityId'",
      "IF resource == 'activity' AND operation IN [\"getComments\", \"getLaps\", \"getKudos\", \"getZones\"] THEN SHOW parameter 'returnAll'",
      "IF resource == 'activity' AND operation IN [\"getComments\", \"getLaps\", \"getKudos\", \"getZones\"] AND returnAll == False THEN SHOW parameter 'limit'",
      "IF resource == 'activity' AND operation == 'getStreams' THEN SHOW parameter 'keys'",
      "IF resource == 'activity' AND operation == 'getAll' THEN SHOW parameter 'returnAll'",
      "IF resource == 'activity' AND operation == 'getAll' AND returnAll == False THEN SHOW parameter 'limit'"
    ]
  }
}