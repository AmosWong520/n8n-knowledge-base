  "configuration_logic": {
    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "resource",
      "operation",
      "operation",
      "operation",
      "imageTemplateId",
      "pdfTemplateId",
      "jsonParameters",
      "download",
      "binaryProperty",
      "overridesJson",
      "propertiesJson",
      "overridesUi",
      "propertiesUi",
      "options"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF resource == 'image' THEN SHOW parameter 'operation'",
      "IF resource == 'pdf' THEN SHOW parameter 'operation'",
      "IF resource == 'account' THEN SHOW parameter 'operation'",
      "IF resource == 'image' AND operation == 'create' THEN SHOW parameter 'imageTemplateId'",
      "IF resource == 'pdf' AND operation == 'create' THEN SHOW parameter 'pdfTemplateId'",
      "IF resource IN [\"pdf\", \"image\"] AND operation == 'create' THEN SHOW parameter 'jsonParameters'",
      "IF resource IN [\"pdf\", \"image\"] AND operation == 'create' THEN SHOW parameter 'download'",
      "IF resource IN [\"pdf\", \"image\"] AND operation == 'create' AND download == True THEN SHOW parameter 'binaryProperty'",
      "IF resource == 'image' AND operation == 'create' AND jsonParameters == True THEN SHOW parameter 'overridesJson'",
      "IF resource == 'pdf' AND operation == 'create' AND jsonParameters == True THEN SHOW parameter 'propertiesJson'",
      "IF resource == 'image' AND operation == 'create' AND jsonParameters == False THEN SHOW parameter 'overridesUi'",
      "IF resource == 'pdf' AND operation == 'create' AND jsonParameters == False THEN SHOW parameter 'propertiesUi'",
      "IF operation == 'create' AND resource IN [\"pdf\", \"image\"] AND download == True THEN SHOW parameter 'options'"
    ]
  }
