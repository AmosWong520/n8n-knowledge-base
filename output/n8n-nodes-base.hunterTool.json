  "configuration_logic": {
    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "operation",
      "domain",
      "onlyEmails",
      "returnAll",
      "limit",
      "filters",
      "domain",
      "firstname",
      "lastname",
      "email"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF operation == 'domainSearch' THEN SHOW parameter 'domain'",
      "IF operation == 'domainSearch' THEN SHOW parameter 'onlyEmails'",
      "IF operation == 'domainSearch' THEN SHOW parameter 'returnAll'",
      "IF operation == 'domainSearch' AND returnAll == False THEN SHOW parameter 'limit'",
      "IF operation == 'domainSearch' THEN SHOW parameter 'filters'",
      "IF operation == 'emailFinder' THEN SHOW parameter 'domain'",
      "IF operation == 'emailFinder' THEN SHOW parameter 'firstname'",
      "IF operation == 'emailFinder' THEN SHOW parameter 'lastname'",
      "IF operation == 'emailVerifier' THEN SHOW parameter 'email'"
    ]
