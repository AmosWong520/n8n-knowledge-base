    "required_sequence": [
      "descriptionType",
      "toolDescription",
      "operation",
      "domain",
      "download",
      "imageTypes",
      "imageFormats"
    ],
    "conditional_rules": [
      "IF descriptionType == 'manual' THEN SHOW parameter 'toolDescription'",
      "IF operation == 'logo' THEN SHOW parameter 'download'",
      "IF operation == 'logo' AND download == True THEN SHOW parameter 'imageTypes'",
      "IF operation == 'logo' AND download == True THEN SHOW parameter 'imageFormats'"
    ]
  }
